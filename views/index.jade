doctype html
html(lang='en', ng-app="twebApp")
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    block css
      link(rel='stylesheet', href='/css/style.css')
      link(rel="stylesheet", href="/components/angular-chart.js/dist/angular-chart.css")
    block js
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
    
  body
    controller(ng-controller="TextController")
        h1 AngularJS Demo
        
        input(ng-model="newtext")
        button(ng-click="on_text(newtext)") Update
        
        p Echo? {{text}}
    
    controller(ng-controller="ChartController")
      canvas(id="test", class="chart chart-doughnut", chart-data="data", chart-labels="labels")

    script(src="/components/angular/angular.js")
    script(src="/components/Chart.js/Chart.js")
    script(src="/components/angular-chart.js/angular-chart.js")
    script(src="/js/tweb-app.js")